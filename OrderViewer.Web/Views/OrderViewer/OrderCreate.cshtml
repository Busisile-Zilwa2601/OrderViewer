@model OrderDto

@{
	var filter = ViewBag.Filter as OrderDto;
}

<form asp-action="OrderCreate">
	<br />
	<div class="container border p-3">
		<h1 class="text-black text-center">Create Order</h1>
		<hr />
		<div class="row">
			<div class="col-2">
				<label class="control-label pt-2" style="font-size:20px;">Order ID</label>
			</div>
			<div class="col-10 pb-3">
				<input class="form-control" asp-for="OrderId" />
				<span asp-validation-for="OrderId" class="text-danger"></span>
			</div>
			<div class="col-2">
				<label class="control-label pt-2" style="font-size:20px;">Customer</label>
			</div>
			<div class="col-10 pb-3">
				<input class="form-control" asp-for="Customer" />
				<span asp-validation-for="Customer" class="text-danger"></span>
			</div>
			<div class="col-2">
				<label class="control-label pt-2" style="font-size:20px;">Status</label>
			</div>
			<div class="col-10 pb-3">
				<input class="form-control" asp-for="Status" />
				<span asp-validation-for="Status" class="text-danger"></span>
			</div>
			<div class="col-2">
				<label class="control-label pt-2" style="font-size:20px;">Total</label>
			</div>
			<div class="col-10 pb-3">
				<input class="form-control" asp-for="Total" type="number" step="any" />
				<span asp-validation-for="Total" class="text-danger"></span>
			</div>
			<div class="col-2">
				<label class="control-label pt-2" style="font-size:20px;">Order Date & Time</label>
			</div>
			<div class="col-10 pb-3">
				<input class="form-control" asp-for="CreatedAt" type="datetime-local" />
				<span asp-validation-for="CreatedAt" class="text-danger"></span>
			</div>

			<div class="col-3 offset-2">
				<a class="btn-primary btn form-control" asp-action="OrderViewerIndex">Back to List</a>
			</div>
			<div class="col-3">
				<input type="submit" value="Create" class="btn btn-success form-control" />

			</div>

		</div>
	</div>

</form>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
